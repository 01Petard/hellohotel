.room {
  width: 96%;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  height: 200rpx;
  margin-top: 30rpx;
  border-bottom: 5rpx solid gainsboro;
}
.room_img {
  width: 24%;
  vertical-align: middle;
}
image {
  width: 100%;
  height: 80%;
}
.room_info {
  width: 31%;
  vertical-align: middle;
  text-align: center;
}
.room_info1 {
  width: 45%;
  vertical-align: middle;
  text-align: center;
}
button {
  background: #fe3131;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: white;
  margin-top: 30rpx;
}
.room_infoname {
  font-weight: bold;
  margin-top: 20rpx;
}
.room_infolabel {
  color: gray;
  font-size: 25rpx;
  margin: 40rpx 8rpx 0;
  display: inline-block;
}
.price {
  color: #fe3131;
  margin-top: 20rpx;
}
